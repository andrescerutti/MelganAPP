<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">

      <h1>Todas las publicaciones</h1>

      <% @publications.each do |publication| %>

        <h2>Categoria: <%= link_to publication.categoria, publication_path(publication) %></h2>
        <p>Cantidad: <%= publication.cantidad %></p>
        <p>Raza: <%= publication.raza %></p>
        <%= link_to "Editar una publicacion |", edit_publication_path(publication) %>
        <%= link_to "Eliminar una publicacion", publication_path(publication), method: :delete %>
        <p>------------</p>

      <% end %>

      <%= link_to "Nueva publicacion", new_publication_path %>

    </div>
  </div>
</div>
